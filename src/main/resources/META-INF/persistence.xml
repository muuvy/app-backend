<?xml version="1.0" encoding="utf-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="muuvy" transaction-type="JTA">
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
        <class>org.muuvy.backend.persistence.models.User</class>
        <class>org.muuvy.backend.persistence.models.Favorite</class>
        <properties>
            <property name="hibernate.ogm.datastore.provider" value="mongodb" />
            <property name="hibernate.ogm.datastore.database" value="muuvy" />
            <property name="hibernate.ogm.datastore.host" value="localhost" />
            <property name="hibernate.ogm.mongodb.authentication_database" value="admin" />
            <property name="hibernate.ogm.datastore.create_database" value="true" />
            <property name="hibernate.ogm.datastore.username" value="root" />
            <property name="hibernate.ogm.datastore.password" value="root" />
        </properties>
    </persistence-unit>
</persistence>